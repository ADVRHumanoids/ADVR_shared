        <joint name="j_arm2_4" value="1.5"/>
        <joint name="j_arm2_5" value="0.0"/>
        <joint name="j_arm2_6" value="0.0"/>
        <joint name="j_arm2_7" value="0.0"/>
        
    </group_state>
    
    <group_state name="after_high_power_contact" group="chains">
        
        <joint name="torso_yaw" value="0.6"/>
        
        <joint name="j_arm1_1" value="0.0"/>
