    <group name="torso">
        <chain base_link="pelvis" tip_link="torso_2"/>
    </group>
    
    <group name="arms">
        <group name="left_arm"/>
        <group name="right_arm"/>
    </group>
        
    <group name="force_torque_sensors">
        <joint name="j_ft_arm2"/>
    </group>
    
    <group name="imu_sensors">
    </group>
    
    <group name="hands">
