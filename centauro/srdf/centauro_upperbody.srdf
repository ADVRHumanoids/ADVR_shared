    </group>

    <group name="chains">
        <group name="left_arm"/>
        <group name="right_arm"/>
        <group name="torso"/>
    </group>

    <group_state name="home" group="chains">
        
        <joint name="torso_yaw" value="0.0"/>
        
        <joint name="j_arm1_1" value="0.0"/>
        <joint name="j_arm1_2" value="-0.3"/>
