<?xml version="1.0"?>
<robot name="centauro">


   <group name="front_left_leg">
      <chain base_link="pelvis" tip_link="ankle2_1"/>
   </group>

   <group name="front_right_leg">
      <chain base_link="pelvis" tip_link="ankle2_2"/>
   </group>

   <group name="rear_right_leg">
      <chain base_link="pelvis" tip_link="ankle2_4"/>
   </group>

   <group name="rear_left_leg">
      <chain base_link="pelvis" tip_link="ankle2_3"/>
   </group>

   <group name="legs">
      <group name="front_left_leg"/>
      <group name="front_right_leg"/>
      <group name="rear_right_leg"/>
      <group name="rear_left_leg"/>
   </group>


    <group name="force_torque_sensors">
        <joint name="j_fl_foot_ft"/>
        <joint name="j_fr_foot_ft"/>
        <joint name="j_hl_foot_ft"/>
        <joint name="j_hr_foot_ft"/>
    </group>

    <group name="imu_sensors">
        <link name="imu_link"/>
    </group>

   <group name="chains">

    <group name="front_left_leg"/>
    <group name="front_right_leg"/>
    <group name="rear_right_leg"/>
    <group name="rear_left_leg"/>

   </group>


    <group_state name="home" group="chains">

        <joint name="hip_yaw_1" value="0.0"/>
        <joint name="hip_pitch_1" value="0.5"/>
        <joint name="knee_pitch_1" value="1"/>
        <joint name="ankle_pitch_1" value="0.5"/>
        <joint name="ankle_yaw_1" value="0.7"/>

        <joint name="hip_yaw_2" value="-0.0"/>
        <joint name="hip_pitch_2" value="-0.5"/>
        <joint name="knee_pitch_2" value="-1"/>
        <joint name="ankle_pitch_2" value="-0.5"/>
        <joint name="ankle_yaw_2" value="-0.7"/>

        <joint name="hip_yaw_3" value="-0.0"/>
        <joint name="hip_pitch_3" value="0.5"/>
        <joint name="knee_pitch_3" value="1"/>
        <joint name="ankle_pitch_3" value="0.5"/>
        <joint name="ankle_yaw_3" value="-0.7"/>

        <joint name="hip_yaw_4" value="0.0"/>
        <joint name="hip_pitch_4" value="-0.5"/>
        <joint name="knee_pitch_4" value="-1"/>
        <joint name="ankle_pitch_4" value="-0.5"/>
        <joint name="ankle_yaw_4" value="0.7"/>

    </group_state>

